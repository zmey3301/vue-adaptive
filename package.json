{
  "name": "vue-adaptive",
  "description": "A rem scale adaptive with breakpoints for Vue.js",
  "license": "MIT",
  "author": "zmey3301 <mk.prlgn@gmail.com>",
  "version": "2.0.0-1",
  "main": "dist/adaptive.umd.js",
  "module": "dist/adaptive.esm.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zmey3301/vue-adaptive.git"
  },
  "bugs": {
    "url": "https://github.com/zmey3301/vue-adaptive/issues"
  },
  "scripts": {
    "postinstall": "is-ci || husky install",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint --ext .js src",
    "test": "jest",
    "build": "rollup --config",
    "version": "conventional-changelog --infile CHANGELOG.md --same-file --preset custom-config && prettier --write CHANGELOG.md && git add CHANGELOG.md",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "dependencies": {
    "@babel/runtime": "^7.12.5",
    "classlist": "^2.0.0",
    "lodash.throttle": "^4.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-eslint": "^8.0.1",
    "@vue/test-utils": "^1.1.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^26.6.3",
    "commitizen": "^4.2.3",
    "conventional-changelog-cli": "^2.1.1",
    "conventional-changelog-custom-config": "^0.3.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.7.0",
    "eslint-cli": "^1.1.1",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^5.0.7",
    "import-sort-style-module": "^6.0.0",
    "is-ci": "^2.0.0",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "pinst": "^2.1.2",
    "prettier": "^2.2.1",
    "prettier-plugin-import-sort": "^0.0.6",
    "regenerator-runtime": "^0.13.7",
    "rollup": "^2.38.0",
    "rollup-plugin-terser": "^7.0.2",
    "vue": "^2.6.12",
    "vue-jest": "^3.0.7",
    "vue-template-compiler": "^2.6.12"
  },
  "peerDependencies": {
    "vue": "2.x"
  },
  "homepage": "https://github.com/zmey3301/vue-adaptive#readme",
  "keywords": [
    "vue",
    "adaptive",
    "scale",
    "breakpoints"
  ],
  "browserslist": [
    "ie >= 9",
    "chrome >= 19"
  ],
  "importSort": {
    ".js, .ts": {
      "style": "module"
    }
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest",
      ".+\\.(js)$": "<rootDir>/node_modules/babel-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**/*.js",
      "!**/node_modules/**"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
